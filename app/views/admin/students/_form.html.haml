- if @student.errors.any?
  .col-md-12.bg-danger
    %h3 Hay errores en este formulario
    %ul
      - @student.errors.full_messages.each do |msg|
        %li= msg
= form_for [:admin, @student] do |form|
  .form-group
    = form.label :danbom
    = form.text_field :danbom, class: 'form-control', placeholder: 'Danbom'
  .form-group
    = form.label :name, 'Nombre completo'
    = form.text_field :name, class: 'form-control',
      placeholder: 'Nombre completo'
  .form-group
    = form.label :age, 'Edad'
    = form.number_field :age, class: 'form-control', min: '0', max: '99',
      placeholder: 'Introduce tu edad...'
  .form-group
    = form.label :dojang, 'Dojang (Escuela)'
    = form.text_field :dojang, class: 'form-control', placeholder: 'Escuela'
  .form-group
    = form.label :teacher, 'Profesor'
    = form.text_field :teacher, class: 'form-control', placeholder: 'Profesor'
  .form-group
    = form.label :exam_age, 'Año de examen'
    = form.number_field :exam_age, class: 'form-control',
      placeholder: 'Introduce el año de examen', min: '1900', max: '2100'
  .form-group
    = form.label :state_id, 'Estado'
    = form.collection_select :state_id, State.all, :id, :name,
      { include_blank: 'Seleccione su estado' }, { class: 'form-control' }
  .form-group
    = form.label :grade_id, 'Grado'
    = form.collection_select :grade_id, Grade.all, :id, :name,
      { include_blank: 'Seleccione su grado' }, { class: 'form-control' }
  = form.submit 'Guardar registro', class: 'btn btn-success'
  = link_to 'Regresar', admin_students_path, class: 'btn btn-primary'
